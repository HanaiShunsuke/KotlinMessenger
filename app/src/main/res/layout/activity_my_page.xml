<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPageActivity">


    <Button
        android:id="@+id/move_message_button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:text="チャット画面へ"
        android:textSize="30sp"
        android:theme="@style/AppTheme.RaisedButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/move_shop_button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:text="取引画面へ"
        android:textSize="30sp"
        android:theme="@style/AppTheme.RaisedButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mypage_imageview"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        app:civ_border_color="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <Button
        android:id="@+id/edit_mypage_button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="76dp"
        android:text="編集"
        android:textSize="30sp"
        android:theme="@style/AppTheme.RaisedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place_mypage_text" />

    <TextView
        android:id="@+id/place_mypage_text"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="436dp"
        android:layout_marginEnd="64dp"
        android:hint="place"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="352dp"
        android:background="@drawable/desin_gradesion"
        android:text="地域"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toEndOf="@+id/mypage_imageview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/produce_mypage_text"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginStart="336dp"
        android:layout_marginTop="36dp"
        android:text="product"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/desin_gradesion"
        android:text="何を作っているか"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toEndOf="@+id/mypage_imageview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username_mypage_text"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="124dp"
        android:hint="Username"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toEndOf="@+id/mypage_imageview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/desin_gradesion"
        android:text="名前"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/mypage_imageview"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>