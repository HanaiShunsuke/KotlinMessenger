<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trades.ProductExhibitActivity">

    <EditText
        android:id="@+id/name_textview_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/selectphoto_imageview_product"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/selectphoto_imageview_product"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/rounded_select_photo_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/selectphoto_button_product"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="102dp"
        android:background="@drawable/rounded_select_photo_button"
        android:text="SELECT FHOTO"
        app:layout_constraintBottom_toBottomOf="@+id/selectphoto_imageview_product"
        app:layout_constraintEnd_toEndOf="@+id/selectphoto_imageview_product"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/selectphoto_imageview_product"
        app:layout_constraintTop_toTopOf="@+id/selectphoto_imageview_product"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/price_textview_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/selectphoto_imageview_product"
        app:layout_constraintTop_toBottomOf="@+id/name_textview_product" />
</androidx.constraintlayout.widget.ConstraintLayout>